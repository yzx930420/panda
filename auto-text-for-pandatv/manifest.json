{
	"manifest_version": 2,
	"name": "熊猫tv自动插入文本插件",
	"version": "1.0",
	"description": "熊猫tv自动插入文本插件 for Arisaly北酱",
	"background" : {
		"scripts" : ["js/jquery.min.js", "js/background.js"]
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"permissions": [
		"http://*/*"
	],
	"content_scripts":[{
		"matches":["http://www.panda.tv/*"],
		"js":["js/jquery.min.js", "js/lrc.js"]
	}]
}
