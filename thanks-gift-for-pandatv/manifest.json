{
	"manifest_version": 2,
	"name": "熊猫礼物感谢插件",
	"version": "1.0",
	"description": "熊猫礼物感谢插件",
	"background" : {
		"scripts" : ["js/jquery.min.js", "js/background.js"]
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"permissions": [
		"http://*/*"
	],
	"content_scripts":[{
		"matches":["*"],
		"js":["js/jquery.min.js", "js/gift.js"]
	}]
}

